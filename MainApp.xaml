<Window x:Class="LoginForm.MainApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginForm"
        mc:Ignorable="d"
        Title="Window1" Height="650" Width="1000">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF70CD0" Offset="0.037"/>
                <GradientStop Color="#FFF6F6F6" Offset="0.804"/>
                <GradientStop Color="#FFF70CD0" Offset="0.925"/>
                <GradientStop Color="#FFF6F6F6" Offset="0.167"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <Rectangle Fill="#8f8f8f"/>
        <Rectangle Fill="#8f8f8f" Grid.Row="2"/>
        <TextBlock Name="Title" HorizontalAlignment="Left" Margin="311,-1,0,0" TextWrapping="Wrap" Text="School Days" VerticalAlignment="Top" FontSize="36" FontFamily="Algerian" Height="50" Width="261" RenderTransformOrigin="0.783,0.629"/>


        <ListBox Name="lbdisplay" Grid.Row="1"  Margin="632,0,10,0"/>

        <TextBlock Name="error" HorizontalAlignment="Left" Margin="334,14,0,0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="15" Width="382" FontFamily="Arial Rounded MT Bold" Foreground="Red"/>

        <Grid HorizontalAlignment="Left" Height="226" Margin="35,32,0,0" Grid.Row="1" VerticalAlignment="Top" Width="187" Background="#FFDCE3EB">
            <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Module" VerticalAlignment="Top" FontFamily="Brush Script MT" FontSize="18" Width="53"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="43,110,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Module Name" VerticalAlignment="Top"/>
        <TextBox Name="tbmodname" HorizontalAlignment="Left" Margin="43,126,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,148,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Number of Credits" VerticalAlignment="Top"/>
        <TextBox Name="tbmodcredits" HorizontalAlignment="Left" Margin="43,164,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Credits" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,188,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Number of Hours per Weeks" VerticalAlignment="Top"/>
        <TextBox Name="tbmodhours" HorizontalAlignment="Left" Margin="43,204,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Hours" VerticalAlignment="Top" Width="120" Height="18"/>
        <Button Name="bmod" Content="Enter" HorizontalAlignment="Left" Margin="43,230,0,0" Grid.Row="1" VerticalAlignment="Top" Width="117" Height="20" Click="bmod_Click"/>
        <TextBox Name="tbmod" HorizontalAlignment="Left" Margin="43,86,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Type somthing" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,70,0,0" TextWrapping="Wrap" Text="Enter Module Code" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="117"/>

        <Grid  HorizontalAlignment="Left" Height="119" Margin="269,351,0,0" Grid.Row="1" VerticalAlignment="Top" Width="164" Background="#FFDCE3EB">
            <Button Name="Clear" Content="Clear screen" HorizontalAlignment="Left" Height="29" Margin="10,80,0,0" VerticalAlignment="Top" Width="129" Click="Clear_Click"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="274,348,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Module to Display" VerticalAlignment="Top" Height="19" Width="159" FontFamily="Brush Script MT" FontSize="18"/>
        <TextBox Name="tbitem" HorizontalAlignment="Left" Margin="274,364,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Code" VerticalAlignment="Top" Width="120"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="274,385,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="Button_Click"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="225" Margin="463,33,0,0" Grid.Row="1" VerticalAlignment="Top" Width="164" Background="#FFDCE3EB">
            <Button Name="workHoursCal" Content="Calculate" HorizontalAlignment="Left" Height="26" Margin="5,188,0,0" VerticalAlignment="Top" Width="130" Click="workHoursCal_Click"/>

        </Border>
        <TextBlock HorizontalAlignment="Center" Margin="0,71,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Hours" VerticalAlignment="Top"/>
        <TextBox Name="tbworkhours" HorizontalAlignment="Left" Margin="468,92,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Hours" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="468,111,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Module " VerticalAlignment="Top"/>
        <TextBox Name="tbworkcode" HorizontalAlignment="Left" Height="17" Margin="468,132,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Code" VerticalAlignment="Top" Width="120"/>
        <DatePicker Name="cworkdate" HorizontalAlignment="Left" Margin="468,160,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="468,40,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Work Hours and Day" VerticalAlignment="Top" FontFamily="Brush Script MT" FontSize="16"/>
        <Button Name="btwork" Content="Enter" HorizontalAlignment="Left" Margin="468,196,0,0" Grid.Row="1" VerticalAlignment="Top" Width="140" Click="btwork_Click" IsEnabled="False" />

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="127" Margin="38,343,0,0" Grid.Row="1" VerticalAlignment="Top" Width="187" Background="#FFDCE3EB"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,348,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Self Study Hours per Week" VerticalAlignment="Top" Height="17" Width="157" FontFamily="Brush Script MT" FontSize="16"/>
        <Button Name="btdisplayhours" Content="Display Hours" HorizontalAlignment="Left" Margin="43,411,0,0" Grid.Row="1" VerticalAlignment="Top" Width="117" Click="btdisplayhours_Click" IsEnabled="False"/>
        <TextBox Name="tbdisplay" HorizontalAlignment="Left" Margin="43,388,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Code" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="43,370,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Module" VerticalAlignment="Top" Width="79"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="225" Margin="260,34,0,0" Grid.Row="1" VerticalAlignment="Top" Width="157" Background="#FFDCE3EB"/>
        <TextBlock HorizontalAlignment="Left" Margin="268,38,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Semester" VerticalAlignment="Top" Width="108" FontFamily="Brush Script MT" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="268,63,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Number of Weeks&#x0a;this Semester" VerticalAlignment="Top"/>
        <TextBox  Name="tbnoweeks" HorizontalAlignment="Left" Margin="268,97,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Weeks" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="268,125,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Enter Start Date of &#x0a; Semester" VerticalAlignment="Top"/>
        <DatePicker Name="dsemester" HorizontalAlignment="Left" Margin="268,165,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Name="btsemester" Content="Enter" HorizontalAlignment="Left" Margin="268,202,0,0" Grid.Row="1" VerticalAlignment="Top" Width="126" Click="btsemester_Click" IsEnabled="False"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="122" Margin="461,343,0,0" Grid.Row="1" VerticalAlignment="Top" Width="166" Background="#FFDCE3EB"/>

        <StackPanel Margin="463,390,437,49" Width="100"  Height="40" Grid.Row="1">
            <RadioButton Name="gr" Content="Greater"/>
            <RadioButton Name="lss" Content="Less"/>

        </StackPanel>

        <TextBlock HorizontalAlignment="Left" Margin="463,346,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Module Credits Greater or Lower than:" VerticalAlignment="Top" FontFamily="Brush Script MT" FontSize="16" Width="164"/>
        <TextBox Name="tbaddcode" HorizontalAlignment="Left" Margin="461,383,0,0" Grid.Row="1" TextWrapping="Wrap" Text="No." VerticalAlignment="Top" Width="120"/>
        <Button Name="btaddcode" Content="Enter" HorizontalAlignment="Left" Margin="468,443,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.703" Width="88" IsEnabled="False" Click="btaddcode_Click"/>
        <TextBlock Name="tbSessionName" HorizontalAlignment="Left" Margin="10,24,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Height="46" Width="72"/>


    </Grid>

</Window>
