<Window x:Class="LoginForm.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginForm"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <Rectangle Fill="#8f8f8f"/>
        <Rectangle Fill="#8f8f8f" Grid.Row="2"/>
        <TextBlock Name="Title" HorizontalAlignment="Left" Margin="311,-1,0,0" TextWrapping="Wrap" Text="School Days" VerticalAlignment="Top" FontSize="36" FontFamily="Algerian" Height="50" Width="261" RenderTransformOrigin="0.783,0.629"/>

        <TextBlock HorizontalAlignment="Left" Margin="330,53,0,0" TextWrapping="Wrap" Text="Enter User ID" VerticalAlignment="Top" Height="16" Width="120" Grid.Row="1"/>
        <TextBox Name="ID" HorizontalAlignment="Left" Margin="330,74,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="120" Grid.Row="1" />
        <TextBox Name="name" HorizontalAlignment="Left" Margin="330,118,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="330,97,0,0" TextWrapping="Wrap" Text="Enter User Name" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="330,140,0,0" TextWrapping="Wrap" Text="Enter User Surname" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox Name="surname" HorizontalAlignment="Left" Margin="330,161,0,0" TextWrapping="Wrap" Text="Surname" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="330,184,0,0" TextWrapping="Wrap" Text="Enter User Password" VerticalAlignment="Top" Grid.Row="1"/>
        <PasswordBox  Name="password" HorizontalAlignment="Left" Margin="330,205,0,0" VerticalAlignment="Top" Width="120" Grid.Row="1"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="307,241,0,0" VerticalAlignment="Top" Click="Button_Click" Grid.Row="1"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="370,241,0,0" VerticalAlignment="Top" Width="47" Grid.Row="1"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="442,241,0,0" VerticalAlignment="Top" Click="Button1_Click" Grid.Row="1"/>
        <TextBlock Name="error" HorizontalAlignment="Left" Margin="307,269,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" Width="168" Grid.Row="1" />
        <TextBlock HorizontalAlignment="Left" Margin="333,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Register" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="20"/>

    </Grid>
</Window>
